{
  "name": "backend",
  "version": "1.0.0",
  "scripts": {
    "start": "npx ts-node-dev src/app.ts"
  },
  "dependencies": {
    "@types/node": "^17.0.45",
    "express": "^4.18.1",
    "typescript": "4.6.4"
  },
  "devDependencies": {
    "ts-node-dev": "^2.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jquery": true
    },
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base"
    ],
    "parserOptions": {
      "project": "backend/tsconfig.json"
    },
    "ignorePatterns": [
      "**/public/**"
    ],
    "rules": {
      "linebreak-style": 0
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
